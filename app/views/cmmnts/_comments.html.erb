<% @post.cmmnts.each do |comment| %>
    <hr>
    <div class="comment clearfix">
      <div class="comment_content">
        <p class="comment_body"><%= comment.body %></p>
      </div>
      <p class="date">Submitted <%= time_ago_in_words(comment.created_at) %> ago</p>
      <% if can? :manage, :all %>
          <p><%= link_to 'Удалить', rubric_post_cmmnt_path(@rubric, @post, comment), method: :delete, class: "btn btn-danger", data: { confirm: 'Точно удалить?' } %>
          </p>
      <% end %>
    </div>
    <hr>
<% end %>